<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParallelSequentialDemo.Views.MainPage"
             Title="Parrall vs Sequential">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="20">
        <Button Text="Parallel" Command="{Binding ParallelCommand}" BackgroundColor="#00b200" TextColor="White"/>
        <Button Text="Sequential" Command="{Binding SequentialCommand}" BackgroundColor="#0003e9" TextColor="White"/>
    </StackLayout>

</ContentPage>